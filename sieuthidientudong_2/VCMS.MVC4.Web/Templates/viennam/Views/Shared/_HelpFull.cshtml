@model List<Article>

@if (Model.Count > 0)
{
    <ul>
        @foreach (var art in Model)
        {
            <li>
                <figure>
                    <a class="banner-cubic-2" href="#" title="@art.ArticleName">
                        @Html.Image(art.ImageUrl, new ImageOptions { Width = 1170, Height = 230, Mode = ImageMode.crop, Lazy = false }, new { alt = art.ArticleName })
                    </a>
                </figure>
            </li>
        }
    </ul>
}

